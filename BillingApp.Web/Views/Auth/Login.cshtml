@using BillingApp.DTO
@model LoginDTO

@{
    ViewData["Title"] = "Login - Billing System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        .login-container {
            max-width: 400px;
            width: 100%;
        }
    </style>
</head>
<body class="bg-light d-flex flex-column vh-100">

    <!-- Page Heading -->
    <div class="container text-center mt-4">
        <h1 class="fw-bold text-primary">Billing System</h1>
    </div>

    <br>

    <!-- Login Form Container -->
    <div class="container d-flex justify-content-center align-items-center flex-grow-1">
        <div class="login-container">
            <div class="card shadow-lg p-4 rounded-4 border-0">
                <div class="text-center mb-3">
                    <h2 class="fw-bold text-primary">Login</h2>
                    <p class="text-muted">Access your account</p>
                </div>

                <!-- Display Server-side Error Messages -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger text-center">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                }

                <!-- Login Form -->
                <form method="post" asp-action="Login">
                    <div class="mb-4">
                        <label for="email" class="form-label fw-semibold">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-envelope text-primary"></i></span>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" required>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label fw-semibold">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-lock text-primary"></i></span>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" required>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>


