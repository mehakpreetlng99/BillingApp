@model IEnumerable<BillingApp.DTO.SubcategoryDTO>

@{
    ViewData["Title"] = "Subcategories";
    var categoryMap = ViewBag.CategoryMap as Dictionary<int, string>;
}

<h2>Subcategories</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Subcategory Name</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(categoryMap != null && categoryMap.ContainsKey(item.CategoryId) ? categoryMap[item.CategoryId] : "Unknown")</td> <!-- ✅ Fetch Category Name -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

