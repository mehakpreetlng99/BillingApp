@model BillingApp.DTO.SubcategoryDTO

@{
    ViewData["Title"] = "Delete Subcategory";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header  text-danger">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i> Delete Subcategory</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center ">Are you sure you want to delete this subcategory?</h5>
                    <hr>
                    <dl class="row">
                        <dt class="col-sm-4">Subcategory Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Category:</dt>
                        <dd class="col-sm-8">@Model.CategoryName</dd> 
                    </dl>

                    <div class="text-center">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times-circle me-2"></i> Cancel
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>
}


