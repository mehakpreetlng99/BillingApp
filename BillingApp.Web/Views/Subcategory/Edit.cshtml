@* @model BillingApp.DTO.SubcategoryDTO *@

@model BillingApp.DTO.SubcategoryDTO

@{
    ViewData["Title"] = "Edit Subcategory";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="fas fa-edit me-2"></i> Edit Subcategory</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Subcategory Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter subcategory name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>
}

