@using BillingApp.DTO
@model List<UserDTO>

@{
    ViewData["Title"] = "Admin List";
}

<div class="container d-flex justify-content-center align-items-start min-vh-100 mt-3">
    <div class="col-md-8">
        <div class="text-center mb-3">
            <h3 class="text-primary fw-bold">
                <i class="bi bi-people"></i> Admin List
            </h3>
        </div>

        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle text-center" id="adminsTable">
                        <thead class="table-dark text-light">
                            <tr>
                                <th style="width: 50%;">Name</th>
                                <th style="width: 50%;">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var admin in Model)
                            {
                                <tr>
                                    <td>@admin.FullName</td>
                                    <td>@admin.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#adminsTable').DataTable({
                responsive: true,
                paging: false,
                searching: false,
                info: false
            });
        });
    </script>
}
