@model BillingApp.DTO.UserDTO

<div class="container mt-5">
    <h2 class="mb-4 text-primary fw-bold">
        <i class="fas fa-user-plus me-2"></i> Register New User
    </h2>

    <!-- Card wrapper for the form -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="RegisterUser" asp-controller="SuperAdmin" method="post" id="registerForm">
                <!-- Full Name -->
                <div class="mb-3">
                    <label for="FullName" class="form-label fw-semibold">
                        <i class="fas fa-user me-1"></i> Full Name
                    </label>
                    <input type="text" class="form-control" id="FullName" name="FullName"
                           value="@Model.FullName" required
                           placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="Email" class="form-label fw-semibold">
                        <i class="fas fa-envelope me-1"></i> Email
                    </label>
                    <input type="email" class="form-control" id="Email" name="Email"
                           value="@Model.Email" required
                           placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="Password" class="form-label fw-semibold">
                        <i class="fas fa-lock me-1"></i> Password
                    </label>
                    <input type="password" class="form-control" id="Password" name="Password"
                           required minlength="8" placeholder="Enter password" />
                    <small class="form-text text-muted">Password must be at least 8 characters long.</small>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="mb-4">
                    <label for="Role" class="form-label fw-semibold">
                        <i class="fas fa-shield-alt me-1"></i> Role
                    </label>
                    <select class="form-select" id="Role" name="Role" required>
                        <option value="" disabled selected>Select a role</option>
                        <option value="Admin">Admin</option>
                        <option value="Agent">Agent</option>

                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-user-check me-2"></i> Register
                    </button>
                    <a href="@Url.Action("ManageUsers", "SuperAdmin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to Users
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Validation scripts -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Custom validation script -->
    <script>
        (function () {
            'use strict';
            var form = document.getElementById('registerForm');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
}



