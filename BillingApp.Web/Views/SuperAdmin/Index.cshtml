@{
    ViewData["Title"] = "Super Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BillingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .dashboard-card {
            transition: all 0.2s ease;
            border-left: 4px solid;
            width: 100%; /* Full width of column */
            margin-bottom: 1.5rem;
            min-height: 200px; /* Fixed height for consistency */
        }
        /* Border colors */
        .admin-card {
            border-left-color: #dc3545;
        }

        .agent-card {
            border-left-color: #fd7e14;
        }

        .users-card {
            border-left-color: #6f42c1;
        }

        .stats-card {
            border-left-color: #20c997;
        }

        .card-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }
        /* Icon colors */
        .admin-icon {
            color: #dc3545;
        }

        .agent-icon {
            color: #fd7e14;
        }

        .users-icon {
            color: #6f42c1;
        }

        .stats-icon {
            color: #20c997;
        }

        .functionality-desc {
            font-size: 0.9rem;
            color: #6c757d;
            min-height: 40px; /* Fixed height for description */
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <!-- Header -->
        <div class="text-center mb-4">
            <h3 class="mb-2"><i class="bi bi-shield-lock"></i> Super Admin Dashboard</h3>
            <p class="text-muted">Manage system users and view sales analytics</p>
        </div>

        <!-- Card Grid -->
        <div class="row">
            <!-- Admin Management -->
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card admin-card h-100">
                    <div class="card-body p-4">
                        <div class="card-icon admin-icon text-center">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h4 class="card-title text-center mb-3">Admins</h4>
                        <p class="functionality-desc text-center">
                            Create and manage administrator accounts
                        </p>
                        <a href="@Url.Action("ManageAdmins", "SuperAdmin")"
                           class="btn btn-danger w-100">
                            <i class="bi bi-list-ul"></i> View All Admins
                        </a>
                    </div>
                </div>
            </div>

            <!-- Agent Management -->
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card agent-card h-100">
                    <div class="card-body p-4">
                        <div class="card-icon agent-icon text-center">
                            <i class="bi bi-person-gear"></i>
                        </div>
                        <h4 class="card-title text-center mb-3">Agents</h4>
                        <p class="functionality-desc text-center">
                            Manage billing agents and their permissions
                        </p>
                        <a href="@Url.Action("ManageAgents", "SuperAdmin")"
                           class="btn btn-warning w-100 text-white">
                            <i class="bi bi-list-ul"></i> View All Agents
                        </a>
                    </div>
                </div>
            </div>

            <!-- All Users -->
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card users-card h-100">
                    <div class="card-body p-4">
                        <div class="card-icon users-icon text-center">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <h4 class="card-title text-center mb-3">All Users</h4>
                        <p class="functionality-desc text-center">
                            View and manage all system users
                        </p>
                        <a href="@Url.Action("ManageUsers", "SuperAdmin")"
                           class="btn btn-primary w-100">
                            <i class="bi bi-people"></i> Manage Users
                        </a>
                    </div>
                </div>
            </div>

            <!-- Sales Statistics -->
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card stats-card h-100">
                    <div class="card-body p-4">
                        <div class="card-icon stats-icon text-center">
                            <i class="bi bi-graph-up-arrow"></i>
                        </div>
                        <h4 class="card-title text-center mb-3">Sales Stats</h4>
                        <p class="functionality-desc text-center">
                            View system-wide sales analytics
                        </p>
                        <a href="@Url.Action("Index", "DashboardStats")"
                           class="btn btn-success w-100">
                            <i class="bi bi-bar-chart"></i> View Sales
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="mt-5 py-3 text-center text-muted small">
        &copy; 2025 BillingApp - Super Admin Portal
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

