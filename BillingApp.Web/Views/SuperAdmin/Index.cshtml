@{
    ViewData["Title"] = "Super Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BillingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BillingApp.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        <h1>Welcome to the Super Admin Dashboard</h1>
        <p>Manage all aspects of the system here. You have full control.</p>

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Manage Admins</h5>
                        <p class="card-text">Create, update, and delete admin users.</p>
                        <a href="@Url.Action("ManageAdmins", "SuperAdmin")" class="btn btn-primary">Manage Admins</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Manage Agents</h5>
                        <p class="card-text">Create, update, and delete agent users.</p>
                        <a href="@Url.Action("ManageAgents", "SuperAdmin")" class="btn btn-primary">Manage Agents</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Manage Users</h5>
                        <p class="card-text">View all users in the system, including Admins and Agents.</p>
                        <a href="@Url.Action("ManageUsers", "SuperAdmin")" class="btn btn-primary">Manage Users</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Other useful links or data cards can go here -->
        <div class="row mt-4">
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">System Statistics</h5>
                        <p class="card-text">View various statistics of the system such as total users, active sessions, etc.</p>
                        <a href="@Url.Action("SystemStats", "SuperAdmin")" class="btn btn-info">View Statistics</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <footer class="footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - BillingApp.Web
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
