@model IEnumerable<BillingApp.DTO.ProductDTO>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="text-primary"><i class="fas fa-boxes me-2"></i> Product List</h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus-circle me-2"></i> Add Product
                </a>
            </div>

            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Price ($)</th>
                                <th>Quantity</th>
                                <th>Subcategory</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price.ToString("C")</td> <!-- Formats as currency -->
                                    <td>@item.Quantity</td>
                                    <td>@item.SubcategoryName</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>
}


