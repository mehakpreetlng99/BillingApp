@model BillingApp.DTO.ProductDTO

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="fas fa-box me-2"></i> Product Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 fw-bold">Price:</dt>
                        <dd class="col-sm-8">@Model.Price</dd>

                        <dt class="col-sm-4 fw-bold">Quantity:</dt>
                        <dd class="col-sm-8">@Model.Quantity</dd>

                        <dt class="col-sm-4 fw-bold">Subcategory:</dt>
                        <dd class="col-sm-8">@Model.SubcategoryName</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>
}



