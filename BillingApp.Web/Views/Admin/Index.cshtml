
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Dashboard</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .dashboard-card {
            border-radius: 10px;
            transition: transform 0.2s ease-in-out;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
            }

            .dashboard-card i {
                font-size: 3rem;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
   

    <!-- Main Content -->
    <div class="container py-5">
        <h2 class="text-center mb-4">Admin Dashboard</h2>

        <!-- Dashboard Cards -->
        <div class="row g-4">
            <!-- Products Card -->
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card text-white bg-primary shadow h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-box-seam"></i>
                        <h4 class="card-title mt-3">Products</h4>
                        <p class="card-text">Manage your product inventory</p>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-light btn-sm">Manage Products</a>
                    </div>
                </div>
            </div>

            <!-- Categories Card -->
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card text-white bg-success shadow h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-tags"></i>
                        <h4 class="card-title mt-3">Categories</h4>
                        <p class="card-text">Organize product categories</p>
                        <a href=" @Url.Action("GetCategories", "Category")" class="btn btn-light btn-sm">Manage Categories</a>
                    </div>
                </div>
            </div>

            <!-- Subcategories Card -->
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card text-white bg-info shadow h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-diagram-2"></i>
                        <h4 class="card-title mt-3">Subcategories</h4>
                        <p class="card-text">Manage product subcategories</p>
                        <a href="@Url.Action("Index", "Subcategory")" class="btn btn-light btn-sm">Manage Subcategories</a>
                    </div>
                </div>
            </div>

            <!-- Sales Dashboard Card -->
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card text-white bg-warning shadow h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-graph-up"></i>
                        <h4 class="card-title mt-3">Sales Analytics</h4>
                        <p class="card-text">View sales reports and analytics</p>
                        <a href="@Url.Action("Index", "DashboardStats")" class="btn btn-light btn-sm">View Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional for interactions) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

