@model BillingApp.DTO.CategoryDTO

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">
            <i class="fas fa-folder-plus"></i> Create New Category
        </h2>

        <form asp-action="CreateCategory" method="post">
            <div class="form-group mb-3">
                <label for="Name" class="form-label">
                    <i class="fas fa-tag"></i> Category Name
                </label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-pen"></i></span>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required placeholder="Enter category name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("GetCategories", "Category")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Categories
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

