@model BillingApp.DTO.CategoryDTO

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white text-center">
                    <h4 class="mb-0"><i class="fas fa-edit me-2"></i> Edit Category</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditCategory" method="post">
                        <!-- Hidden field to keep track of the Category Id -->
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i> Update
                            </button>
                            <a href="@Url.Action("GetCategories", "Category")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Back to Categories
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>
}
