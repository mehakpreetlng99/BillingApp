@model BillingApp.DTO.CategoryDTO

@{
    ViewData["Title"] = "Category Details";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i> Category Details</h4>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <h5 class="fw-bold"><i class="fas fa-tag me-2"></i> @Model.Name</h5>
            </div>

            <div class="text-end">
                <a href="@Url.Action("GetCategories", "Category")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Back to Categories
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>
}


